<Window x:Class="App.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="20">

        <!-- Имя пользователя -->
        <TextBlock Text="Имя пользователя:" Margin="5" />
        <!-- <TextBox x:Name="UsernameBox" Width="250" Margin="5" /> -->
        <TextBox Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="250" Margin="5" />
        <TextBlock Text="{Binding Path=Username}" />

        <!-- Email -->
        <TextBlock Text="Email:" Margin="5" />
        <!-- <TextBox x:Name="EmailBox" Width="250" Margin="5" /> -->
        <TextBox Text="{Binding Path=Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="250" Margin="5" />

        <!-- Пароль -->
        <TextBlock Text="Пароль:" Margin="5" />
        <!-- <TextBox x:Name="PasswordBox" Width="250" Margin="5" /> -->
        <TextBox Text="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="250" Margin="5" />

        <!-- Повтор пароля -->
        <TextBlock Text="Повтор пароля:" Margin="5" />
        <!-- <TextBox x:Name="RepeatPasswordBox" Width="250" Margin="5" /> -->
        <TextBox Text="{Binding Path=RepeatPass, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="250" Margin="5" />
        
        <!-- Кнопка Регистрация -->
        <Button Content="Зарегистрироваться" Width="150" Margin="10" Click="RegisterButton_Click" FontFamily="Century Gothic"/>

        <!-- кнопка Войти -->
        <Button Content="Войти" Width="150" Margin="10" Click="LoginButton_Click" FontFamily="Century Gothic" />
    </StackPanel>
</Window>
