<Window x:Class="App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="300" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="20">

        <!-- имя пользователя или почта -->
        <TextBlock Text="Имя пользователя или Email:" Margin="5" />
        <TextBox x:Name="Login" Width="250" Margin="5" />

        <!-- пароль -->
        <TextBlock Text="Пароль:" Margin="5" />
        <PasswordBox x:Name="Password" Width="250" Margin="5" />

        <!-- кнопка Войти -->
        <Button Content="Войти" Width="150" Margin="10" Click="LoginButton_Click" FontFamily="Century Gothic" />

        <!-- кнопка Регистрация -->
        <Button Content="Регистрация" Width="150" Margin="10" Click="RegisterButton_Click" FontFamily="Century Gothic" />
    </StackPanel>
</Window>
